{% extends 'base.html.twig' %}

{% block title %}Job offers
{% endblock %}

{% block body %}
	<center>
		<h1>Job offers</h1>
	</center>

	<table class="table table-bordered table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ job.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ job.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ job.description }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ job.createdAt|date("d/m/Y") }}</td>
			</tr>
			<tr>
				<th>Time</th>
				<td>{{ job.createdAt|date("H:i:s") }}</td>
			</tr>


		</tbody>
	</table>

	<a href="{{ path('app_job_index') }}" class="btn btn-primary">back to list</a>

	{{ include('job/_delete_form.html.twig') }}
{% endblock %}
